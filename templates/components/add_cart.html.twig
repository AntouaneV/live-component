	<button id="{{idBase}}" data-action="live#action" data-action-name="save(id={{ idBase }})" class="btn btn-custom" data-bs-toggle="tooltip" data-bs-placement="top" title="Ajouter au panier">

		<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-bag-plus" viewbox="0 0 16 16">
